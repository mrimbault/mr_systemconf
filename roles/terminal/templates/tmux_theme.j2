## panes
set -g pane-border-bg "{{ tmux.paneborderbg }}"
set -g pane-border-fg "{{ tmux.paneborderfg }}"
set -g pane-active-border-bg "{{ tmux.paneactiveborderbg }}"
set -g pane-active-border-fg "{{ tmux.paneactiveborderfg }}"
# Set inactive/active window pane styles.
# FIXME use the same as default terminal bg and fg for active, and lower
# contrast for inactive.
set -g window-style 'bg={{ tmux.windowstylebg }},fg={{ tmux.windowstylefg }}'
set -g window-active-style 'bg={{ tmux.windowactivestylebg }},fg={{ tmux.windowactivestylefg }}'

